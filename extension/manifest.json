
// this file is acting as a pointer to the various files (html and javascript)

{
  "manifest_version": 2,

  "name": "Github Unicode Art",
  "description": "CS846 Project... whatever...",
  "version": "1.0",

  //"browser_action": 
  //{
  // "default_icon": "icon.png",
  //  "default_popup": "popup.html"
  //},

  "browser_action": 
  {
    "default_icon": "icon.png"
   // "default_popup": "popup.html"
  },

  // listener.js is used to detect when a user is editing a file on github
  "background": 
  {
    "persistent": false,
    "scripts":    [ "background.js" ]
    //"page": "background.html"
  },

  "content_scripts": [{
        "matches": ["*://*.github.com/*/edit/*"],
        "js":      ["content.js", "jquery.js", "jquery-ui.js"],
        "css":     [ "jquery-ui.css"]
    }],

  "web_accessible_resources": [
     "images/*.png",  // jquery css resources
     "*.html"

    //"style/double-rainbow.css",
    //"script/double-rainbow.js",
    //"script/main.js",
    //"templates/*",
    //"*.html"
  ],

  "permissions": 
  [
    "tabs",
    "https://github.com/*/edit/*",
    "file:///*"
  ]
}